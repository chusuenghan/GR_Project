<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserKeyword">
	
	<resultMap type="userkeywordMap" id="UserKeywordVO">
		<id property="userId" 		column="user_id"/>
		<result property="keyword" 		column="keyword"/>
		<result property="keywordId" 		column="keyword_id"/>
	</resultMap>
	
	<select id="findTitleKeyword" resultMap="UserKeywordVO">
		<![CDATA[
			SELECT user_id, keyword
			FROM user_keyword;
			
		]]>
	</select>
	
	<select id="findUserKeyword" resultMap="UserKeywordVO">
		<![CDATA[
			SELECT user_id, keyword, keyword_id
			FROM user_keyword
			Where user_id = #{userId};
		]]>
	</select>
	
	<select id="findDuplKeyword" parameterType="userkeywordMap" resultMap="UserKeywordVO">
		<![CDATA[
			SELECT user_id, keyword, keyword_id
			FROM user_keyword
			Where (user_id = #{userId} AND keyword = #{keyword});
		]]>
	</select>
	
	<insert id="insertKeyword" parameterType="userkeywordMap">
		<![CDATA[
			INSERT INTO user_keyword
				(user_id, keyword)
			VALUES
				(#{userId}, #{keyword});
		]]>
	</insert>

	<delete id="deleteKeyword" parameterType="userkeywordMap">
	    DELETE FROM user_keyword
	    WHERE keyword_id = #{keywordId};
	</delete>
</mapper>